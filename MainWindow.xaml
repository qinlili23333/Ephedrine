<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebModInstaller"
        xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf" x:Class="MainWindow"
        mc:Ignorable="d"
        Title="Qinlili Mod Installer" Height="450" Width="800" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" WindowStyle="SingleBorderWindow" WindowStartupLocation="CenterScreen" Background="Transparent">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="-1" />
    </WindowChrome.WindowChrome>
    <Grid  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

        <Wpf:WebView2 x:Name="MainWeb" Margin="0,15,0,0" />
        <ProgressBar x:Name="Progress" Height="15" VerticalAlignment="Top" IsIndeterminate="True" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFED98FF" Panel.ZIndex="1"/>
        <Label x:Name="Status" Content="Initializing..." HorizontalAlignment="Stretch" VerticalAlignment="Top" MaxHeight="15" FontFamily="Cascadia Code" FontWeight="Normal" Padding="5,0,5,0" FontSize="13" Panel.ZIndex="3"/>

    </Grid>
</Window>
