<Window x:Class="PluginManage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebModInstaller"
        mc:Ignorable="d"
        Title="Plugin Manage" Height="600" Width="400" ResizeMode="NoResize">
    <Grid Margin="0,0,0,10">
        <ScrollViewer  VerticalAlignment="Top" Height="515" Margin="0,10,0,10">
            <StackPanel x:Name="InstallList"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,0,0,0" />
        </ScrollViewer>
        <Grid VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
            <Button x:Name="Uninstall" Content="Uninstall" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" Width="60" VerticalContentAlignment="Stretch" Height="24"/>
            <Button x:Name="Update" Content="Update" HorizontalAlignment="Right" Margin="0,0,80,0" VerticalAlignment="Center" Width="60" VerticalContentAlignment="Stretch" Height="24">
            </Button>
            <CheckBox x:Name="ForceReinstall" Content="Force Reinstall Update" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
